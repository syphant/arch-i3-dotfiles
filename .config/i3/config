set $rosewater #f5e0dc
set $mauve     #cba6f7
set $red       #f38ba8
set $peach     #fab387
set $text      #cdd6f4
set $overlay0  #6c7086
set $surface0  #313244
set $base      #1e1e2e
set $mantle    #181825

# target                 title     bg     text     indicator  border
client.focused           $mantle   $mauve $mantle  $rosewater $text
client.focused_inactive  $overlay0 $base  $text    $rosewater $surface0
client.unfocused         $overlay0 $base  $text    $rosewater $surface0
client.urgent            $peach    $base  $peach   $overlay0  $red
client.placeholder       $overlay0 $base  $text    $overlay0  $surface0
client.background        $base

